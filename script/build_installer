#!/bin/bash

function build() {
  # load config
  source BuildConfig

  local prefix=tmp/installer

  # build
  rm -rf ${prefix} || true
  mkdir -p ${prefix} || true

  cp src/installer/install.bash ${prefix}/install.bash.erb
  erb ${prefix}/install.bash.erb > ${prefix}/install.bash
  rm ${prefix}/install.bash.erb
  chmod -w ${prefix}/install.bash
}

build
